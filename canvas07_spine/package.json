{
  "name": "sria_frontend_template_with-npm-scripts",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run clean && npm run build && run-p watch serve",
    "build": "run-s clean copy:* build:*",
    "build-prod": "run-s clean copy:* build:pug build:scss build:postcss build-prod:webpack",
    "watch": "run-p copy:* watch:*",
    "build:pug": "pug --out dist --basedir src/pug --hierarchy src/pug --pretty src/pug",
    "watch:pug": "pug --out dist --basedir src/pug --hierarchy src/pug --pretty src/pug -w",
    "build:scss": "sass src/scss:dist/assets/css/ --embed-sources --style=expanded",
    "watch:scss": "sass src/scss:dist/assets/css/ --embed-sources --style=expanded -w",
    "build:postcss": "postcss 'dist/assets/css/style.css' -o 'dist/assets/css/style.css' -m -u autoprefixer",
    "watch:postcss": "postcss 'dist/assets/css/style.css' -o 'dist/assets/css/style.css' -m -u autoprefixer -w",
    "build:webpack": "webpack",
    "build-prod:webpack": "webpack --mode=production",
    "watch:webpack": "webpack -w",
    "copy:static": "cpx 'src/static/**/*' 'dist/assets'",
    "serve": "browser-sync start -s 'dist' -w --no-ui --no-ghost-mode",
    "clean": "rimraf dist",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.6",
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.5",
    "cpx": "^1.5.0",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "pug": "^2.0.3",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "^2.6.3",
    "sass": "^1.38.2",
    "sass-loader": "^7.1.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "pixi-spine": "^3.0.13",
    "pixi.js": "^6.1.3"
  }
}
